<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.basis.spinnertest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.basis.spinnertest.Launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.basis.spinnertest.XMLSpinnerActivity"
            android:label="@string/title_activity_xmlspinner" >
        </activity>
        <activity
            android:name="com.basis.spinnertest.SpiinerFromCodeActivity"
            android:label="@string/title_activity_spiiner_from_code" >
        </activity>
        <activity
            android:name="com.basis.spinnertest.DoubleSpinnerActivity"
            android:label="@string/title_activity_double_spinner" >
        </activity>
    </application>

</manifest>
